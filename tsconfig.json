{
    "__comment": {
        "##module": "some old node version does not support ES6 import yet"
    },
    "compilerOptions": {
        "target": "es2015",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": false,
        "moduleResolution": "node",
        "listEmittedFiles": false,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "pretty": true,
        "module": "commonjs",
        "importHelpers": true,
        "baseUrl": "src/",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "typescript.referencesCodeLens.enabled": true,
    "atom": {
        "rewriteTsconfig": false
    }
}